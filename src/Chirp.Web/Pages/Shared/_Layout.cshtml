@inject IWebHostEnvironment Environment

<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>

<body>
    <div class=page>
        <h1><img src="/images/icon1.png" alt="Icon1" />Chirp!</h1>
        <div class=navigation>
            @if (Model.IsUserAuthenticated())
            {
                <div>
                    <a id=timeline href="/@(Model.GetUserName())">my timeline</a> |
                    <a id=public-timeline href="/">public timeline</a> |
                    @if (Environment.IsDevelopment())
                    {
                        <a id=reset-tables href="/reset">reset tables</a> <span>|</span>
                    }
                    <a id=about href="/user-information">about me</a> |
                    <a id=logout href="/login/oauth/auth?signOut=true">logout [@(Model.GetUserName())]</a>
                </div>
            }
            else
            {
                <div>
                    <a id=public-timeline href="/">public timeline</a> |
                    @if (Environment.IsDevelopment())
                    {
                        <a id=devlogin href="/devlogin">development login</a> <span>|</span>
                    }
                    <a id=login href="/login/oauth/auth">login</a>
                </div>
            }
        </div>
        <div class=body>
            @RenderBody()
        </div>
        <div class=footer>
            Chirp &mdash; An ASP.NET Application
        </div>
    </div>

</body>

</html>
