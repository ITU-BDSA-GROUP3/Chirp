@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (User.Identity.IsAuthenticated)
{
    <div class="cheepbox">
        <h3>What's on your mind, @(User.Identity.Name)?</h3>
        <form method="post">
            <textarea style="width:95%; margin: 10px; " name="Text"></textarea>
            <input type="submit">
        </form>
    </div>
}

@if (Model.Cheeps.Count > 0)
{
    <ul id="messagelist" class="cheeps">
        @foreach (var cheep in Model.Cheeps)
        {
            <li>
                <p>
                    <strong>
                        <a href="/@cheep.Author.Name">@cheep.Author.Name</a>
                    </strong>
                    @cheep.Text
                    <small>&mdash; @cheep.GetSerializedTimeStamp()</small>
                </p>
                @if (User.Identity.IsAuthenticated && !Model.LikesOwnCheep(User.Identity.Name, cheep.CheepId))
                {
                    <form method="post"
                        asp-page-handler="@((Model.AuthorLikesCheep(User.Identity.Name, cheep.CheepId)) ? "Unlike" : "Like")"
                        asp-route-cheepId="@cheep.CheepId">
                        <button type="submit">@((Model.AuthorLikesCheep(User.Identity.Name, cheep.CheepId)) ? "Unlike" : "Like")</button>
                    </form>
                }
                @{ViewData["cheepLikes"] = Model.GetLikeCount(cheep.CheepId).ToString();}
                <p>@ViewData["cheepLikes"] @(ViewData["cheepLikes"]?.ToString() == "1" ? "person likes" : "people like") this.</p>

            </li>
        }
    </ul>
}
else
{
    <em>There are no cheeps so far.</em>
}

<div class="pagination">
    @for (int i = 1; i <= Math.Ceiling((double)Model.NumOfCheeps / Model.CheepsPerPage); i++)
    {
        if (Context?.GetEndpoint()?.DisplayName?.Contains("Public") == true)
        {
            <a href="/?page=@i">@i</a>
        }
        else
        {
            <a href="?page=@i">@i</a>
        }
    }
</div>
