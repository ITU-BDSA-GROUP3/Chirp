@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (User.Identity.IsAuthenticated)
{
    <div class="cheepbox">
        <h3>What's on your mind, @(User.Identity.Name)?</h3>
        <form method="post">
            <input style="float: left" name="Text">
            <input type="submit">
        </form>
    </div>
}

@if (Model.Cheeps.Count > 0)
{
    <ul id="messagelist" class="cheeps">
        @foreach (var cheep in Model.Cheeps)
        {
            <li>
                <p>
                    <strong>
                        <a href="/@cheep.Author.Name">@cheep.Author.Name</a>
                    </strong>
                    @cheep.Text
                    <small>&mdash; @cheep.GetSerializedTimeStamp()</small>
                </p>

                @if (User.Identity.IsAuthenticated)
                {
                    @if (Model.AuthorLikesCheep(User.Identity.Name, cheep.CheepId))
                    {
                        <!-- Display the "Unlike" button -->
                        <form method="post" asp-page-handler="RemoveLike" asp-route-cheepId="@cheep.CheepId">
                            <button type="submit">Unlike</button>
                        </form>
                    }
                    else
                    {
                        <!-- Display the "Like" button -->
                        <form method="post" asp-page-handler="Like" asp-route-cheepId="@cheep.CheepId">
                            <button type="submit">Like</button>
                        </form>
                    }
                }

                @{
                    ViewData["cheepLikes"] = Model.GetLikeCount(cheep.CheepId).ToString();
                }

                @if (ViewData["cheepLikes"] == "1")
                {
                    <p>@ViewData["cheepLikes"] person likes this.</p>
                }
                else
                {
                    <p>@ViewData["cheepLikes"] people like this.</p>
                }
            </li>
        }
    </ul>
}
else
{
    <em>There are no cheeps so far.</em>
}

<div class="pagination">
    @for (int i = 1; i <= Math.Ceiling((double)Model.NumOfCheeps / Model.CheepsPerPage); i++)
    {
        if (Context.GetEndpoint().DisplayName.Contains("Public"))
        {
            <a href="/?page=@i">@i</a>
        }
        else
        {
            <a href="?page=@i">@i</a>
        }
    }
</div>
