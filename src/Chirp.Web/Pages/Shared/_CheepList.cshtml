@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (User?.Identity != null && User.Identity?.IsAuthenticated == true && Model.IsUserOrPublicPage())
{
    <div class="cheepbox">
        <h3>What's on your mind, @(User?.Identity?.Name)?</h3>
        <form method="post">
            <textarea style="width:95%; margin: 10px; " name="Text"></textarea>
            <button type="submit">Submit</button>
        </form>
    </div>
}

@if (Model.Cheeps.Count > 0)
{
    <ul id="messagelist" class="cheeps">
        @foreach (var cheep in Model.Cheeps)
        {
            <li>
                <div class="row">
                    <div class="column">
                        <img src="https://avatars.githubusercontent.com/@($"{cheep.Author.Name}")">
                        @if (User?.Identity?.IsAuthenticated == true && cheep.Author.Name != User.Identity.Name)
                        {
                            @if (Model.UserFollowsAuthor(cheep.Author.Name))
                            {
                                <form method="post" asp-page-handler="Unfollow"
                                    asp-route-routeName="@cheep.Author.Name">
                                    <button type="submit">Unfollow</button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Follow"
                                    asp-route-routeName="@cheep.Author.Name">
                                    <button type="submit">Follow</button>
                                </form>
                            }
                        }
                    </div>
                    <div>
                        <div class="row">
                            <a href="/@cheep.Author.Name"><strong>@cheep.Author.Name</strong></a>
                            <p> &mdash; @cheep.GetSerializedTimeStamp()</p>
                        </div>
                        <div class="row">@cheep.Text</div>
                        <div class="row">
                            @if (User?.Identity != null && User.Identity.IsAuthenticated && !Model.LikesOwnCheep(cheep.CheepId))
                            {
                                <form method="post"
                                    asp-page-handler="@((Model.AuthorLikesCheep(cheep.CheepId)) ? "Unlike" : "Like")"
                                    asp-route-cheepId="@cheep.CheepId">
                                    <button type="submit">@((Model.AuthorLikesCheep(cheep.CheepId)) ? "Unlike" : "Like")</button>
                                </form>
                            }
                            @{
                                var cheepLikes = Model.GetLikeCount(cheep.CheepId).ToString();
                            }
                            <p class="likes">@cheepLikes @(int.Parse(cheepLikes.ToString()) == 1 ?
                        "person likes" : "people like") this.</p>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
}
else
{
    <em>There are no cheeps so far.</em>
}

<div class="pagination">
    @for (int i = 1; i <= Math.Ceiling((double)Model.NumOfCheeps / Model.CheepsPerPage); i++)
    {
        if (Context?.GetEndpoint()?.DisplayName?.Contains("Public") == true)
        {
            <a href="/?page=@i">@i</a>
        }
        else
        {
            <a href="?page=@i">@i</a>
        }
    }
</div>
